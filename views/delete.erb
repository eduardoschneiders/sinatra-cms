<% if @note %>
  <p>Ae you sure you want to delete the following note: <em><%=h @note.content %></em></p>
  <form action="/<%= @note.id %>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input type="submit" value="Ys, Delete It!">
    <a href="/<%= @note.id %>">Cancel</a>

  </form>
<% else %>
  Not not found
<% end %>