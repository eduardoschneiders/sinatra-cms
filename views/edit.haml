- if @note
  %form{ :action => "/#{@note.id}", :method => "post", :id => 'edit'}
    %input{ :type => 'hidden', :name => '_method', :value => 'put'}
    %textarea{ :name => 'content' }
      = h @note.content
    - if @note.complete
      - checked = 'checked'
    %input{ :type => 'checkbox', :name => 'complete',  :value => "#{checked}"}
    %input{ :type => 'submit'}
    %p
      %a{ :href => "/#{@note.id}/delete"}
        Delete

- else
  %p
    Note not found
