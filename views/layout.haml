!!! 5
%html
  %head
    %meta{ :charset => "utf-8"}
    %title
      = @title + ' | ' + SITE_TITLE
    %link{ :href => '/reset.css', :rel => 'stylesheet'}
    %link{ :href => '/style.css', :rel => 'stylesheet'}
    %link{ :href => '/rss.xml', :rel => 'application/rss+xml'}
  %body
    %header
      %hgroup
        %div.welcome
          %h3
            - if login?
              Welcome
              = session[:username]
              %a{ :href => '/logout' }
                Logout
        %h1
          %a{ :href => '/'}
            = SITE_TITLE
        %h2
          = SITE_DESCRIPTION

    - if flash[:notice]
      %p.notice= flash[:notice]

    - if flash[:error]
      %p.error= flash[:error]

    %div#main
      = yield

    %footer
      %p
        %small
          An app for
          %a{ :href => '/'}
            Recall